; EditorConfig is awesome: http://editorconfig.org
root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false

; PHP
[*.php]
indent_style = space
indent_size = 2

; Sass
[*.sass]
indent_style = space
indent_size = 2

; CoffeeScript
[*.coffee]
indent_style = space
indent_size = 2